{
    "version": "4.38.2",
    "description": "The extra resources of v2ray (beta)",
    "homepage": "https://github.com/v2fly/v2ray-core",
    "license": "MIT",
    "depends": "maple/v2ray-beta",
    "url": "https://github.com/v2fly/v2ray-core/releases/download/v4.38.2/v2ray-extra.zip",
    "hash": "3055287d7c901facfb96c69befd0ee28ee9dff18c3c73d984b0c5cc30d072403",
    "installer": {
        "script": [
            "function LinkFile([String] $file, [String] $source = $file) {",
            "    Write-Host \"Creating hardlink for $file\"",
            "    New-Item -Force -ItemType HardLink -Path \"$(appdir v2ray-beta $global)\\current\" -Name $file -Target \"$dir\\$source\" | Out-Null",
            "}",
            "LinkFile 'index.html' 'browserforwarder\\index.html'",
            "LinkFile 'index.js' 'browserforwarder\\index.js'"
        ]
    },
    "uninstaller": {
        "script": [
            "Remove-Item \"$(appdir v2ray-beta $global)\\current\\index.html\" -Force",
            "Remove-Item \"$(appdir v2ray-beta $global)\\current\\index.js\" -Force"
        ]
    },
    "checkver": {
        "url": "https://github.com/v2fly/v2ray-core/releases",
        "regex": "/releases/tag/(?:v|V)?([\\w.]+)"
    },
    "autoupdate": {
        "url": "https://github.com/v2fly/v2ray-core/releases/download/v$version/v2ray-extra.zip"
    }
}
