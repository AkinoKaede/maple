{
    "version": "4.37.3",
    "description": "The extra resources of v2ray",
    "homepage": "https://github.com/v2fly/v2ray-core",
    "license": "MIT",
    "depends": "v2ray",
    "url": "https://github.com/v2fly/v2ray-core/releases/download/v4.37.3/v2ray-extra.zip",
    "hash": "127ad21249d1f35a9760a938abe1b1b6d3042df21e62648b83150e4ea850bbe2",
    "installer": {
        "script": [
            "function LinkFile([String] $file, [String] $source = $file) {",
            "    Write-Host \"Creating hardlink for $file\"",
            "    New-Item -Force -ItemType HardLink -Path \"$(appdir v2ray $global)\\current\" -Name $file -Target \"$dir\\$source\" | Out-Null",
            "}",
            "LinkFile 'index.html' 'browserforwarder\\index.html'",
            "LinkFile 'index.js' 'browserforwarder\\index.js'"
        ]
    },
    "uninstaller": {
        "script": [
            "Remove-Item \"$(appdir v2ray $global)\\current\\index.html\" -Force",
            "Remove-Item \"$(appdir v2ray $global)\\current\\index.js\" -Force"
        ]
    },
    "checkver": "github",
    "autoupdate": {
        "url": "https://github.com/v2fly/v2ray-core/releases/download/v$version/v2ray-extra.zip"
    }
}